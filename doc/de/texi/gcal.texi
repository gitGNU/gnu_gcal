ber@"ucksichtigt:

@table @code
@item %,@r{[}@var{Datum}@r{]}
@cindex Spezialtext @code{%,@r{[}@var{Datum}@r{]}}
@cindex @code{%,@r{[}@var{Datum}@r{]}} Spezialtext, Biorhythmus
